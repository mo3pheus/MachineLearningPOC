package org.sanket.codingGym.DataMining.algorithms;

/* general java imports */
import java.io.File;
import java.io.FileNotFoundException;
import java.io.IOException;

/* machine learning imports */

import net.sf.javaml.clustering.Clusterer;
import net.sf.javaml.clustering.KMeans;
import net.sf.javaml.core.Dataset;
import net.sf.javaml.tools.data.FileHandler;
import net.sf.javaml.distance.EuclideanDistance;

/**
 * @author sanket
 * 			This class uses the machine learning library to cluster given data
 */
public class KMeansClusterer {
	Clusterer	clusterer;
	Dataset		dataset;

	public KMeansClusterer(String dataLocation) {
		try {
			clusterer = new KMeans(4, 1000, EuclideanDistance);
			dataset = FileHandler.loadDataset(new File(dataLocation));
		} catch (FileNotFoundException fne) {
			fne.printStackTrace(System.out);
		} catch (IOException io) {
			io.printStackTrace(System.out);
		}
	}

	public Dataset[] cluster() {
		return (dataset != null) ? clusterer.cluster(dataset) : null;
	}
}
