package org.sanket.codingGym.SwingSet;

import java.awt.*;

public class DrawAndFillApplication extends Frame {
	/**
	 * Some weird serial number
	 */
	private static final long	serialVersionUID	= 1L;
	private Listener listener = new Listener(this);
	
	public static void main(String[] args) {
		new DrawAndFillApplication();
	}

	public DrawAndFillApplication() {
		super("My Playground");

		this.setVisible(true);
		this.setSize(600, 600);
		drawShapes(this.getGraphics());
		
		this.addWindowListener(listener);
	}

	private void drawShapes(Graphics g) {
		Graphics2D g2 = (Graphics2D) g;
		g2.drawRect(30, 30, 40, 40);
		g2.setColor(Color.darkGray);
		// g2.fillRect(30, 60, 40, 40);
	}
}
