package internal.tools.machine.learning;

message Pair{ // a single cell within a sample
	reserved 1,2;
	reserved "key","value";
	required int32 key=1;
	required double value=2;
}

message Sample{
	reserved 1,2;
	reserved "samplePoint", "classId";
	required repeated Pair samplePoint = 1; // represents an n-dimensional sample point 
	optional int32 classId = 2; // samples can be optionally labeled with a classification
}

message SampleDataset{
	reserved 1,2,3;
	reserved "sampleDataset", "classificationKey", "datasetId";
	required repeated Sample sampleDataset=1; // has a list of samples
	optional string classificationKey=2; // a string that acts like a key to look up what classId stands for
	optional string datasetId=3; // a string representing the name of the dataset 
}


